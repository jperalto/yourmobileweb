<%= form_with(model: plan, local: true) do |form| %>
  <% if plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

      <ul>
        <% plan.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, class: 'form-control' %>
  </div>

  <div class="field mt-2">
    <%= form.label :precio %>
    <%= form.text_field :precio, class: 'form-control' %>
  </div>

  <div class="field mt-2">
    <%= form.label :sms %>
    <%= form.number_field :sms, class: 'form-control' %>
  </div>

  <div class="field mt-2">
    <%= form.label :minutos %>
    <%= form.number_field :minutos, class: 'form-control' %>
  </div>

  <div class="field mt-2">
    <%= form.label :datosGB %>
    <%= form.text_field :datosGB, class: 'form-control' %>
  </div>

  <div class="field mt-2">
    <%= form.label :redes %>
    <%= form.check_box :redes, class: 'form-control' %>
  </div>

  <div class="actions mt-3">
    <%= form.submit 'Agregar Plan', class: 'btn btn-success' %>
  </div>
<% end %>
